@model IEnumerable<InspectSystem.Models.InspectDocs>

@Scripts.Render("~/bundles//jquery")
<link rel="stylesheet" href="~/Content/MobileStyle/MyMobileTabStyle.css" />

@{
    ViewBag.Title = "工程師審核頁面";

    if (TempData["SendMsg"] != null)
    {
        <script>
            var message = @Html.Raw(Json.Encode(TempData["SendMsg"]));
            alert(message);
        </script>
    }
}
<h2 class="text-center">
    <b>工程師審核頁面</b>
</h2>
<hr />

@foreach (var item in Model)
{
    <div class="tab row">
        <button class="col-xs-12" onclick="location.href='@Url.Action("Index", "InspectDocEdit", new { area = "Mobile", docID = item.DocID })'">

            <div>
                <h4>
                    @Html.DisplayFor(modelItem => item.InspectAreas.AreaName)
                </h4>
            </div>

            <div>
                <span class="col-xs-3">@Html.DisplayNameFor(model => model.InspectFlowStatusTable.FlowStatusName)</span>
                @Html.DisplayFor(model => item.InspectFlowStatusTable.FlowStatusName)
            </div>

            <div>
                <span class="col-xs-3">@Html.DisplayNameFor(model => model.Date)</span>
                @Html.DisplayFor(modelItem => item.Date)
            </div>

            <div>
                <span class="col-xs-3">@Html.DisplayNameFor(model => model.EndTime)</span>
                @Html.DisplayFor(modelItem => item.EndTime)
            </div>

            <div>
                <span class="col-xs-3">@Html.DisplayNameFor(model => model.WorkerName)</span>
                @Html.DisplayFor(modelItem => item.WorkerName)
            </div>

            <div>
                <span class="col-xs-3">@Html.DisplayNameFor(model => model.CheckerName)</span>
                @Html.DisplayFor(modelItem => item.CheckerName)
            </div>
        </button>
    </div>
}
