<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -  巡檢系統</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        /* Dropdown Content (Hidden by Default) */
        .dropdown-title-menu {
            display: none;
            position: absolute;
            right: 0px;
            list-style-type: none;
        }

        /* Show the dropdown menu on hover */
        .dropdown:hover .dropdown-title-menu {
            display: block;
        }
    </style>
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("應用程式名稱", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("巡檢系統", "SelectAreas", "InspectDocDetails")</li>
                    <li>@Html.ActionLink("審核頁面", "Index", "InspectDocChecker")</li>
                    <li class="dropdown">@Html.ActionLink("巡檢區域維護", "Index", "InspectAreas")
                        <ul class="dropdown-menu dropdown-title-menu">
                            <li>@Html.ActionLink("新增", "Create", "InspectAreas")</li>
                            <li>@Html.ActionLink("修改", "Index", "InspectAreas")</li>
                            <li>@Html.ActionLink("列表", "Index", "InspectAreas")</li>
                        </ul>
                    </li>
                    <li class="dropdown">@Html.ActionLink("巡檢類別維護", "Index", "InspectClasses")
                        <ul class="dropdown-menu dropdown-title-menu">
                            <li>@Html.ActionLink("新增", "Create", "InspectClasses")</li>
                            <li>@Html.ActionLink("修改", "Index", "InspectClasses")</li>
                            <li>@Html.ActionLink("列表", "Index", "InspectClasses")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("巡檢項目維護", "Index", "InspectItems")</li>
                    <li>@Html.ActionLink("各區審核主管維護", "Index", "InspectAreaCheckers")</li>
                    <li>@Html.ActionLink("注意事項維護", "Index", "InspectPrecautions")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now - 巡檢系統</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
