@model IEnumerable<InspectSystem.Models.ClassesOfAreas>

@Scripts.Render("~/bundles//jquery")
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/DocCheckerDocDetails.js"></script>
<link rel="stylesheet" href="~/Content/MyStyleForDocDetail.css">

@{
    ViewBag.Title = "DocDetails";
}

<h3 style="font-weight: bold">@ViewBag.AreaName</h3>
<hr />
<a class="btn btn-primary" href="@Url.Action("Index", new { areaID = ViewBag.AreaID })">回到編輯畫面</a>
<button type="button" class="btn btn-success" onclick="SendDocToChecker(@ViewBag.DocID)">確認送出審核</button>
<hr />

<div class="container">
    <div class="tab">
        @foreach (var item in Model)
        {
            <button class="tablinks" onclick="openClassContent(event, '@item.ACID', '@ViewBag.DocID')" id="@item.ClassID">@item.InspectClasses.ClassName</button>
        }
    </div>

    <div class="tabcontent" id="tabContent">
    </div>
</div>

<div class="container">
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#loadingModal" style="display:none" id="loadingBtn">注意事項</button>
    <!-- Loading Modal -->
    <div class="modal fade" id="loadingModal">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header"></div>
                <div class="modal-body">
                    <!-- Loading image for Ajax. -->
                    <div id="loadingIMG" style="text-align: center">
                        <img src="~/Content/ajax-loader.gif" />資料讀取中，請稍後。
                    </div>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
</div>



