@model IEnumerable<InspectSystem.Models.ClassesOfAreas>

@Scripts.Render("~/bundles//jquery")
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/InspectDocTempView.js"></script>
<link rel="stylesheet" href="~/Content/MyStyleForDocDetail.css">

@{
    ViewBag.Title = "DocDetails";
}

<h3 style="font-weight: bold">@ViewBag.AreaName</h3>
<hr />
@using (Html.BeginForm("SendDocToChecker", "InspectDocDetails", FormMethod.Post, new { id = "sendDocForm", @class = "form-inline" }))
{
    <div class="container">
        
        <input type="hidden" value="@ViewBag.DocID" name="docID" />
        <div class="form-group col-md-3">
            @Html.Label("選擇審核人員:", new { @for = "checkerList" })<br />
            @{/*
               * Html.DropDownList("checkerList", null, "請選擇",
               *                    new { @class = "form-control", name = "checkerList", required = "required", id = "checkerDropDownList"})
               */
            }
            @Html.TextBox("checkerList")
        </div>

        <div class="form-group col-md-4">
            @Html.Label("意見描述:", new { @for = "opinionsTextArea" })<br />
            @Html.TextArea("opinionsTextArea", new { cols = "30", rows = "2"})
        </div>

        <div class="form-group" style="padding-top: 20px">
            <a class="btn btn-primary" href="@Url.Action("Index", new { areaID = ViewBag.AreaID })">回到編輯畫面</a>
            <button type="submit" class="btn btn-success" style="margin-left: 12px">確認送出審核</button>
        </div>
    </div>
}
<hr />

<div class="container">
    <div class="tab">
        @foreach (var item in Model)
        {
            <button class="tablinks" onclick="openClassContent(event, '@item.ACID', '@ViewBag.DocID')" id="@item.ClassID">@item.InspectClasses.ClassName</button>
        }
    </div>

    <div class="tabcontent" id="tabContent">
    </div>
</div>

<div class="container">
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#loadingModal" style="display:none" id="loadingBtn">注意事項</button>
    <!-- Loading Modal -->
    <div class="modal fade" id="loadingModal">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header"></div>
                <div class="modal-body">
                    <!-- Loading image for Ajax. -->
                    <div id="loadingIMG" style="text-align: center">
                        <img src="~/Content/ajax-loader.gif" />資料讀取中，請稍後。
                    </div>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
</div>



