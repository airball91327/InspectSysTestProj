@model IEnumerable<InspectSystem.Models.InspectAreas>

<link rel="stylesheet" href="~/Content/w3.css">
@Scripts.Render("~/bundles//jquery")

@{
    ViewBag.Title = "選擇區域";
}

<style>
.w3-display-container {
    padding-top: 15px;
    padding-bottom: 15px;
    font-size: 28px;
    font-weight: bold;
    text-shadow: 3px 2px gray;
    text-align: center;
}
</style>

<h2>選擇區域</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="w3-display-container">
                <a href="@Url.Action("Index", new { areaID = item.AreaID})" class="w3-button w3-round-large w3-opacity w3-hover-opacity-off">
                    <img src="~/Content/TestPic.jpg" class="img-responsive w3-round" />
                    <p class="w3-display-middle">@Html.DisplayFor(modelItem => item.AreaName)</p>
                </a>
            </div>
        </div>
    }
</div>




