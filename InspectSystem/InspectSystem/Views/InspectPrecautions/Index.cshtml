@model IEnumerable<InspectSystem.Models.InspectPrecautions>

@{
    ViewBag.Title = "新增注意事項";
}

<h2>注意事項維護</h2>

<a class="btn btn-primary" href="@Url.Action("Create")">新增事項</a><br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InspectAreas.AreaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InspectAreas.AreaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("內容編輯", "Edit", new { id = item.PrecautionID }) |
                @Html.ActionLink("詳細資訊", "Details", new { id = item.PrecautionID }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.PrecautionID })
            </td>
        </tr>
    }

</table>
