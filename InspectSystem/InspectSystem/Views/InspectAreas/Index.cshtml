@model IEnumerable<InspectSystem.Models.InspectAreas>

@{
    ViewBag.Title = "區域列表";
}

<h2>區域列表</h2>

<a href="@Url.Action("Create")" class="btn btn-primary">新增區域</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AreaID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AreaName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AreaID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AreaName)
        </td>
        <td>
            @Html.ActionLink("區域名稱編輯", "Edit", new { id = item.AreaID }) |
            @Html.ActionLink("Details", "Details", new { id = item.AreaID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AreaID })
        </td>
    </tr>
}

</table>
